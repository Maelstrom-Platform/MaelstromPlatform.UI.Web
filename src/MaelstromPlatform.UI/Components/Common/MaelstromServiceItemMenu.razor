@implements IDisposable

<RadzenStack Orientation="Orientation.Vertical" JustifyContent="JustifyContent.Center" Wrap="FlexWrap.NoWrap">
    <RadzenRow>
        @foreach (var menuItem in @GlobalState.ServiceItemMenuItems)
        {
            <RadzenColumn Size="2">
                <MaelstromButton Caption = "@menuItem.Caption" Location = "@menuItem.Location"></MaelstromButton>
            </RadzenColumn>
        }
    </RadzenRow>
</RadzenStack>

@code {
    [CascadingParameter] public MaelstromState GlobalState { get; set; }

    protected override void OnInitialized()
    {
        GlobalState.StateChanged += () => StateHasChanged();
    }

    public void Dispose()
    {
        GlobalState.StateChanged -= StateHasChanged;
    }
}
