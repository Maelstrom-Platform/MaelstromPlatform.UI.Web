@page "/roadmap"

@using MaelstromPlatform.UI.Components.Services.Roadmap

<RoadmapDashboard />

@code {
    [CascadingParameter] public MaelstromState GlobalState { get; set; }

    private static readonly List<MaelstromMenuItem> Items =
    [
        new MaelstromMenuItem { Caption = "Dashboard", Location = "roadmap" },
        new MaelstromMenuItem { Caption = "Browse", Location = "roadmap/browse" },
        new MaelstromMenuItem { Caption = "New", Location = "roadmap/new" },
        new MaelstromMenuItem { Caption = "Map", Location = "roadmap/map" }
    ];

    protected override void OnInitialized()
    {
        GlobalState.ServiceMenuItems = Items;
        GlobalState.ActiveService = "Roadmap";
        GlobalState.StateChanged.Invoke();
    }
}
