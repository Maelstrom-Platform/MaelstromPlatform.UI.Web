@page "/buildnote"

@using MaelstromPlatform.UI.Components.Services.BuildNote

<BuildNoteDashboard />

@code {
    [CascadingParameter] public MaelstromState GlobalState { get; set; }

    private static readonly List<MaelstromMenuItem> Items =
    [
        new MaelstromMenuItem { Caption = "Dashboard", Location = "buildnote" },
        new MaelstromMenuItem { Caption = "Browse", Location = "buildnote/browse" },
        new MaelstromMenuItem { Caption = "New", Location = "buildnote/new" },
        new MaelstromMenuItem { Caption = "Map", Location = "buildnote/map" }
    ];

    protected override void OnInitialized()
    {
        GlobalState.ServiceMenuItems = Items;
        GlobalState.ActiveService = "Build Note";
        GlobalState.StateChanged.Invoke();
    }
}
