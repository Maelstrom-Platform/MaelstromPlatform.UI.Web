@page "/location"

@using MaelstromPlatform.UI.Components.Services.Location

<LocationDashboard />

@code {
    [CascadingParameter] public MaelstromState GlobalState { get; set; }

    private static readonly List<MaelstromMenuItem> Items =
    [
        new MaelstromMenuItem { Caption = "Dashboard", Location = "location" },
        new MaelstromMenuItem { Caption = "Browse", Location = "location/browse" },
        new MaelstromMenuItem { Caption = "New", Location = "location/new" },
        new MaelstromMenuItem { Caption = "Map", Location = "location/map" }
    ];

    protected override void OnInitialized()
    {
        GlobalState.ServiceMenuItems = Items;
        GlobalState.ActiveService = "Location";
        GlobalState.StateChanged.Invoke();
    }
}
