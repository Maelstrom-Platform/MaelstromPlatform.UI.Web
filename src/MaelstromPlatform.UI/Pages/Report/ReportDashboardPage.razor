@page "/report"

@using MaelstromPlatform.UI.Components.Services.Report

<ReportDashboard />

@code {
    [CascadingParameter] public MaelstromState GlobalState { get; set; }

    private static readonly List<MaelstromMenuItem> Items =
    [
        new MaelstromMenuItem { Caption = "Dashboard", Location = "report" },
        new MaelstromMenuItem { Caption = "Browse", Location = "report/browse" },
        new MaelstromMenuItem { Caption = "New", Location = "report/new" },
        new MaelstromMenuItem { Caption = "Map", Location = "report/map" }
    ];

    protected override void OnInitialized()
    {
        GlobalState.ServiceMenuItems = Items;
        GlobalState.ActiveService = "Report";
        GlobalState.StateChanged.Invoke();
    }
}
