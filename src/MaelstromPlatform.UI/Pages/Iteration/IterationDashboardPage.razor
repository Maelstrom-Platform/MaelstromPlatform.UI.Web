@page "/iteration"

@using MaelstromPlatform.UI.Components.Services.Iteration

<IterationDashboard />

@code {
    [CascadingParameter] public MaelstromState GlobalState { get; set; }

    private static readonly List<MaelstromMenuItem> Items =
    [
        new MaelstromMenuItem { Caption = "Dashboard", Location = "iteration" },
        new MaelstromMenuItem { Caption = "Browse", Location = "iteration/browse" },
        new MaelstromMenuItem { Caption = "New", Location = "iteration/new" },
        new MaelstromMenuItem { Caption = "Map", Location = "iteration/map" }
    ];

    protected override void OnInitialized()
    {
        GlobalState.ServiceMenuItems = Items;
        GlobalState.ActiveService = "Iteration";
        GlobalState.StateChanged.Invoke();
    }
}
