@page "/administration"

@using MaelstromPlatform.UI.Components.Services.Administration

<AdministrationDashboard />

@code {
    [CascadingParameter] public MaelstromState GlobalState { get; set; }

    private static readonly List<MaelstromMenuItem> Items =
    [
        new MaelstromMenuItem { Caption = "Dashboard", Location = "administration" },
    new MaelstromMenuItem { Caption = "Browse", Location = "administration/browse" },
    new MaelstromMenuItem { Caption = "New", Location = "administration/new" },
    new MaelstromMenuItem { Caption = "Map", Location = "administration/map" }
    ];

    protected override void OnInitialized()
    {
        GlobalState.ServiceMenuItems = Items;
        GlobalState.ActiveService = "Administration";
        GlobalState.StateChanged.Invoke();
    }
}
