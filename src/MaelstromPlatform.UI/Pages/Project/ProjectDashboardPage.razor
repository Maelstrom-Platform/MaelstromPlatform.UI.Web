@page "/project"

@using MaelstromPlatform.UI.Components.Services.Project

<ProjectDashboard />

@code {
    [CascadingParameter] public MaelstromState GlobalState { get; set; }

    private static readonly List<MaelstromMenuItem> Items =
    [
        new MaelstromMenuItem { Caption = "Dashboard", Location = "project" },
        new MaelstromMenuItem { Caption = "Browse", Location = "project/browse" },
        new MaelstromMenuItem { Caption = "New", Location = "project/new" },
        new MaelstromMenuItem { Caption = "Map", Location = "project/map" }
    ];

    protected override void OnInitialized()
    {
        GlobalState.ServiceMenuItems = Items;
        GlobalState.ActiveService = "Project";
        GlobalState.StateChanged.Invoke();
    }
}
