@page "/tag"

@using MaelstromPlatform.UI.Components.Services.Tag

<TagDashboard />

@code {
    [CascadingParameter] public MaelstromState GlobalState { get; set; }

    private static readonly List<MaelstromMenuItem> Items =
    [
        new MaelstromMenuItem { Caption = "Dashboard", Location = "tag" },
        new MaelstromMenuItem { Caption = "Browse", Location = "tag/browse" },
        new MaelstromMenuItem { Caption = "New", Location = "tag/new" },
        new MaelstromMenuItem { Caption = "Map", Location = "tag/map" }
    ];

    protected override void OnInitialized()
    {
        GlobalState.ServiceMenuItems = Items;
        GlobalState.ActiveService = "Tag";
        GlobalState.StateChanged.Invoke();
    }
}
