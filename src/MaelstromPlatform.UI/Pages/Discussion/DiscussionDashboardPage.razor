@page "/discussion"

@using MaelstromPlatform.UI.Components.Services.Discussion

<DiscussionDashboard />

@code {
    [CascadingParameter] public MaelstromState GlobalState { get; set; }

    private static readonly List<MaelstromMenuItem> Items =
    [
        new MaelstromMenuItem { Caption = "Dashboard", Location = "discussion" },
        new MaelstromMenuItem { Caption = "Browse", Location = "discussion/browse" },
        new MaelstromMenuItem { Caption = "New", Location = "discussion/new" },
        new MaelstromMenuItem { Caption = "Map", Location = "discussion/map" }
    ];

    protected override void OnInitialized()
    {
        GlobalState.ServiceMenuItems = Items;
        GlobalState.ActiveService = "Discussion";
        GlobalState.StateChanged.Invoke();
    }
}
