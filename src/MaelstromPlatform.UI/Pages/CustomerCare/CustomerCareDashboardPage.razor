@page "/care"

@using MaelstromPlatform.UI.Components.Services.CustomerCare

<CustomerCareDashboard />

@code {
    [CascadingParameter] public MaelstromState GlobalState { get; set; }

    private static readonly List<MaelstromMenuItem> Items =
    [
        new MaelstromMenuItem { Caption = "Dashboard", Location = "care" },
        new MaelstromMenuItem { Caption = "Browse", Location = "care/browse" },
        new MaelstromMenuItem { Caption = "New", Location = "care/new" },
        new MaelstromMenuItem { Caption = "Map", Location = "care/map" }
    ];

    protected override void OnInitialized()
    {
        GlobalState.ServiceMenuItems = Items;
        GlobalState.ActiveService = "Customer Care";
        GlobalState.StateChanged.Invoke();
    }
}
