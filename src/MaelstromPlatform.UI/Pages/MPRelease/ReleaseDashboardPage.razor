@page "/release"

@using MaelstromPlatform.UI.Components.Services.MPRelease

<ReleaseDashboard />

@code {
    [CascadingParameter] public MaelstromState GlobalState { get; set; }

    private static readonly List<MaelstromMenuItem> Items =
    [
        new MaelstromMenuItem { Caption = "Dashboard", Location = "release" },
        new MaelstromMenuItem { Caption = "Browse", Location = "release/browse" },
        new MaelstromMenuItem { Caption = "New", Location = "release/new" },
        new MaelstromMenuItem { Caption = "Map", Location = "release/map" }
    ];

    protected override void OnInitialized()
    {
        GlobalState.ServiceMenuItems = Items;
        GlobalState.ActiveService = "Release";
        GlobalState.StateChanged.Invoke();
    }
}
